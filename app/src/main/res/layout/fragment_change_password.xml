<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="@dimen/unit_two"
        android:layout_marginLeft="@dimen/unit_two"
        android:layout_marginRight="@dimen/unit_two"
        android:hint="@string/type_old_password"
        android:id="@+id/changePassword_oldPassword"
        app:hintAnimationEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            style="@style/Text.Body1"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="@dimen/unit_two"
        android:layout_marginLeft="@dimen/unit_two"
        android:layout_marginRight="@dimen/unit_two"
        android:hint="@string/type_new_password"
        android:id="@+id/changePassword_newPassword"
        app:hintAnimationEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            style="@style/Text.Body1"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="@dimen/unit_two"
        android:layout_marginLeft="@dimen/unit_two"
        android:layout_marginRight="@dimen/unit_two"
        android:hint="@string/type_new_password_confirmed"
        android:id="@+id/changePassword_newPasswordConfirm"
        app:hintAnimationEnabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            style="@style/Text.Body1"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/changePassword_save"
        style="@style/Widget.AppCompat.Button.Colored"
        android:text="@string/save"
        android:layout_marginTop="@dimen/unit_two"
        android:layout_marginLeft="@dimen/unit_two"
        android:layout_marginRight="@dimen/unit_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>