<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:background="@color/grey_300"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/unit_three"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="@dimen/unit_two"
            android:paddingRight="@dimen/unit_two"
            android:id="@+id/editProfile_avatar"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Text.ProfileItem"
                android:text="@string/avatar"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/editProfile_avatarDisplay"
                android:layout_marginTop="@dimen/unit_half"
                android:layout_marginBottom="@dimen/unit_half"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>



        <View
            android:layout_marginLeft="@dimen/unit_two"
            android:layout_marginRight="@dimen/unit_two"
            android:visibility="gone"
            style="@style/Divider.Lighter" />

        <LinearLayout
            android:orientation="horizontal"
            android:paddingLeft="@dimen/unit_two"
            android:paddingRight="@dimen/unit_two"
            android:visibility="gone"
            android:id="@+id/editProfile_name"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/name"
                style="@style/Text.ProfileItem"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"/>

            <TextView
                tools:text="凡超"
                style="@style/Text.ProfileItem.Value"
                android:id="@+id/editProfile_nameDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

    <FrameLayout
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/unit_three"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:id="@+id/editProfile_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/password"
                android:paddingLeft="@dimen/unit_two"
                android:paddingRight="@dimen/unit_two"
                style="@style/Text.ProfileItem"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="******"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/unit_two"
                android:paddingRight="@dimen/unit_two"
                style="@style/Text.ProfileItem.Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText,TextViewEdits"/>

        </LinearLayout>


    </FrameLayout>



</LinearLayout>