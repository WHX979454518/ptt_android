<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:gravity="left|center_vertical"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/userItem_avatar"
        tools:background="@color/red"
        android:layout_marginTop="@dimen/unit_half"
        android:layout_marginBottom="@dimen/unit_half"
        android:layout_marginLeft="@dimen/unit_one"
        android:layout_marginRight="@dimen/unit_half"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/userItem_name"
        style="@style/Text.Body1"
        android:textColor="?attr/colorAccent"
        android:layout_marginLeft="@dimen/unit_half"
        tools:text="凡超"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/Text.Body1"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/unit_half"
        android:text="@string/invite_you_to_join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/inviteItem_time"
        style="@style/Text.Caption"
        tools:text="13:34"
        android:layout_marginRight="@dimen/unit_half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/inviteItem_join"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:text="@string/dialog_join"
        android:minWidth="0dp"
        android:paddingLeft="@dimen/unit_two"
        android:paddingRight="@dimen/unit_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>