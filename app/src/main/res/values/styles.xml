<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar" />

    <style name="AppTheme.Room" parent="AppTheme.Dark">
        <item name="colorPrimaryDark">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.RoomInvitation" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TransparentDialog" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextAppearance">@style/TextAppearance.ToolbarTitle</item>
    </style>

    <style name="TextAppearance.ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/icons</item>
        <item name="android:textColorPrimary">@color/icons</item>
        <item name="android:textColorSecondary">@color/icons</item>
    </style>

    <style name="Text.Display1" parent="TextAppearance.AppCompat.Display1" />
    <style name="Text.Display2" parent="TextAppearance.AppCompat.Display2" />
    <style name="Text.Display3" parent="TextAppearance.AppCompat.Display3" />
    <style name="Text.Display4" parent="TextAppearance.AppCompat.Display4" />
    <style name="Text.Headline" parent="TextAppearance.AppCompat.Headline" />
    <style name="Text.Title" parent="TextAppearance.AppCompat.Title" />
    <style name="Text.Subhead" parent="TextAppearance.AppCompat.Subhead" />
    <style name="Text.Body2" parent="TextAppearance.AppCompat.Body2" />
    <style name="Text.Body1" parent="TextAppearance.AppCompat.Body1" />
    <style name="Text.Caption" parent="TextAppearance.AppCompat.Caption" />
    <style name="Text.Button" parent="TextAppearance.AppCompat.Button" />

    <style name="Text.MainTabButton" parent="Text.Button">
        <item name="android:textColor">@color/tab_item</item>
        <item name="android:padding">@dimen/unit_one</item>
        <item name="android:drawablePadding">@dimen/unit_one</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.ProfileItem" parent="Text.Subhead">
        <item name="android:paddingTop">@dimen/unit_two</item>
        <item name="android:paddingBottom">@dimen/unit_two</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_gravity">left|center_vertical</item>
    </style>

    <style name="Text.ProfileItem.Value">
        <item name="android:paddingTop">@dimen/unit_two</item>
        <item name="android:paddingBottom">@dimen/unit_two</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_normal</item>
    </style>

    <style name="Divider.Lighter">
        <item name="android:alpha">0.5</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/divider_normal</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="ProfileButton" parent="Text.Button">
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:drawablePadding">@dimen/unit_one</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">@dimen/unit_one</item>
        <item name="android:paddingBottom">@dimen/unit_one</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
